ğŸ“¦ docker-compose.yml

version: '3.8'
services:
  rust-api:
    build: ./rust_api
    ports: ["8080:8080"]
  
  agi-fastapi:
    build: ./fastapi_backend
    ports: ["8000:8000"]
    depends_on: [redis, postgres]
  
  redis:
    image: redis:alpine
    ports: ["6379:6379"]

  postgres:
    image: postgres:13
    environment:
      POSTGRES_USER: agi
      POSTGRES_PASSWORD: secret
      POSTGRES_DB: agi_mem
    ports: ["5432:5432"]


---

ğŸ“¦ Makefile

build:
	docker-compose build

run:
	docker-compose up

test:
	pytest tests/test_agi.py

shell:
	docker exec -it agi-fastapi /bin/bash

clean:
	docker-compose down -v


